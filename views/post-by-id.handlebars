<article class="post">
    <div>
        <div class="dashboard-container">
            <h4 class="post-title">{{post.title}}</h4>
            <div class="post-body">
                <p class="post-content">{{post.content}}</p>
                <p class="post-author">Posted by <span class="postUser">{{post.user.username}}</span> on
                    <span class = "dateSpan">{{format_date post.createdAt}}</span></p>
            </div>
        </div>
    </div>
</article>

<div >
    <form class="comment-form" id="comment-form">
        <div class="form-row">
            <label class="form-label">Comment</label>
            <input id="comment" name="comment-body" class="form-input  form-control" />
        </div>
        <button type="submit" class="dashboardBtn">SUBMIT</button>
    </form>
</div>

<div>
    <div class="comments">
        <h4 class="comment-list">Comments</h4>
        {{#each post.comments}}
        <div class="comment-box">
            <div class="post-body">
                <div class="comment-text">
                    {{comment_content}}
                </div>
                <div class="comment-author">
                    -{{user.username}}, {{format_date createdAt}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="/js/comment.js"></script>